<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="azn">
        <createTable tableName="SCHICHT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SCHICHT"/>
            </column>
            <column name="START_TS" type="DATETIME"/>
            <column name="ENDE_TS" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="azn">
        <createTable tableName="ZEITABSCHNITT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ZEITABSCHNITT"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="PREIS" type="DECIMAL(19, 2)"/>
            <column name="AKTIV" type="BOOLEAN"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="azn">
        <createTable tableName="ZEITEINTRAG">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ZEITEINTRAG"/>
            </column>
            <column name="SCHICHT_ID" type="UUID"/>
            <column name="ZEITABSCHNITT_ID" type="UUID"/>
            <column name="SCHICHT_DAUER" type="TIME"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="azn">
        <createIndex indexName="IDX_ZEITEINTRAG_SCHICHT" tableName="ZEITEINTRAG">
            <column name="SCHICHT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="SCHICHT_ID" baseTableName="ZEITEINTRAG"
                                 constraintName="FK_ZEITEINTRAG_ON_SCHICHT" referencedColumnNames="ID"
                                 referencedTableName="SCHICHT"/>
    </changeSet>
    <changeSet id="5" author="azn">
        <createIndex indexName="IDX_ZEITEINTRAG_ZEITABSCHNIT" tableName="ZEITEINTRAG">
            <column name="ZEITABSCHNITT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="ZEITABSCHNITT_ID" baseTableName="ZEITEINTRAG"
                                 constraintName="FK_ZEITEINTRAG_ON_ZEITABSCHNIT" referencedColumnNames="ID"
                                 referencedTableName="ZEITABSCHNITT"/>
    </changeSet>
</databaseChangeLog>